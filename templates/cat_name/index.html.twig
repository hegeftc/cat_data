{% extends 'base.html.twig' %}

{% block title %}Cat data choice{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <form method="post" action="{{ path('app_cat_name') }}">
            <label for="catDropdown">Select a cat:</label>
            <select id="catDropdown" name="catDropdown">
                {% for cat in cat_data %}
                    <option value="{{ cat.id }}">{{ cat.name }}</option>
                {% endfor %}
            </select>
            <button type="submit">Submit</button>
        </form>
    </div>
{% endblock %}
